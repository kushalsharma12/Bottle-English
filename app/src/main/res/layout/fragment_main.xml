<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="360dp"
        android:background="@drawable/ic_rectangle_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bottle English"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="top"
            android:layout_margin="20dp"
            android:src="@drawable/studying" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_gravity="center|top"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="45dp"
            android:src="@drawable/ic_talktostr" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top|right"
            android:layout_margin="24dp"
            android:src="@drawable/ic_slang" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="66dp"
            android:src="@drawable/ic_playg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top|right"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="24dp"
            android:src="@drawable/ic_idioms" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="108dp"
            android:src="@drawable/ic_dailywords" />

        <include layout="@layout/bottom_sheet"

            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>